@model IEnumerable<StaffArtsofte.Models.EmployeeInfo>
@{
    ViewData["Title"] = "Index";
}

<h1>Список сотрудников</h1>

<p>
    <a asp-action="Add">Добавить</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => emp.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => emp.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => emp.Age)
                </td>
                <td>
                    @Html.DisplayFor(mmodelItem => emp.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => emp.LanguageName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@emp.ID">Изменить</a>
                    <a asp-action="Details" asp-route-id="@emp.ID">Информация</a>
                    <a asp-action="Delete" asp-route-id="@emp.ID">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>